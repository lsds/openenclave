{
  "name": "oeedger8r",
  "version": "0.7.0",
  "description": "The Open Enclave SDK's oeedger8r",
  "license": "MIT",

  "esy": {
    "build": [
      "dune build -p #{self.name}"
    ],
    "buildDev": [
      "dune build -p #{self.name} @fmt --auto-promote",
      "dune build -p #{self.name}"
    ],
    "buildsInSource": "_build",
    "release": {
      "bin": "oeedger8r",
      "includePackages": [
        "root"
      ]
    }
  },

  "dependencies": {
    "@opam/dune": "~1.11.3",
    "ocaml": "~4.8.0"
  },

  "devDependencies": {
    "@opam/merlin": "~3.3.2",
    "@opam/ocamlformat": "0.12",
    "ocaml": "~4.8.0"
  }
}
